# Azure Configuration
# REQUIRED: Copy this file to terraform.tfvars and fill in your actual values
# The terraform.tfvars file will be automatically ignored by git

# Azure Subscription ID (REQUIRED)
# Find it with: az account show --query id -o tsv
subscription_id = "YOUR_SUBSCRIPTION_ID_HERE"

# Email for monitoring alerts (REQUIRED)
alert_email = "your-email@example.com"

# Region Configuration (OPTIONAL)
# Options: Swiss, EU-West, EU-North, US-East, US-West
# region = "Swiss"

# Resource Prefix (OPTIONAL)
# prefix = "win-vm-iis"

# VM Size (OPTIONAL)
# Options: small, medium, large
# vm_size = "small"

# Database Size (OPTIONAL)
# Options: small, medium, large
# db_size = "medium"

# SSH Public Key Path (OPTIONAL)
# Default: ~/.ssh/id_rsa.pub
# ssh_public_key_path = "~/.ssh/id_rsa.pub"

# Database Administrator Login (OPTIONAL)
# db_login = "mysqladminun"
